<Menu as |menu|>
  <menu.Button>Toggle menu</menu.Button>
  <menu.Items>
    <menu.Item @as={{component "link-to" route="index" query=(hash filter=null)}} as |item|>
      Item 1 {{if item.isActive "(active)"}}
    </menu.Item>

    <menu.Item disabled as |item|>
      Item 2 {{if item.isActive "(active)"}}
    </menu.Item>

    <menu.Item as |item|>
      Item 3 {{if item.isActive "(active)"}}
    </menu.Item>
  </menu.Items>
</Menu>
