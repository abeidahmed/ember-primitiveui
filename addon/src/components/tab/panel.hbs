{{#if this.selected}}
  {{#let (element (or @as "div")) as |Tag|}}
    <Tag
      id={{@id}}
      role="tabpanel"
      tabindex={{if this.selected "0" "-1"}}
      aria-labelledby={{@selectedItem.id}}
      ...attributes
    >
      {{yield (hash selected=this.selected)}}
    </Tag>
  {{/let}}
{{/if}}
