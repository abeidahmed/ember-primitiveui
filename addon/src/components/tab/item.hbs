{{#let (element (or @as "button")) as |Tag|}}
  <Tag
    id={{this.id}}
    role="tab"
    tabindex={{if this.selected "0" "-1"}}
    aria-controls={{if this.selected @controls}}
    aria-selected="{{this.selected}}"
    {{on "click" this.onClick}}
    {{this.registerItem}}
    ...attributes
  >
    {{yield (hash selected=this.selected)}}
  </Tag>
{{/let}}
