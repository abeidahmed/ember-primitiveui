{{!-- template-lint-disable no-down-event-binding --}}

{{#let (element (or @as "div")) as |Tag|}}
  <Tag {{on "keydown" this.onKeydown}} ...attributes>
    {{yield (hash
      Label=(
        component "listbox/label"
        labelId=this.labelId
        onLabelClick=this.onLabelClick
        registerLabel=this.registerLabel
        unregisterLabel=this.unregisterLabel
      )
      Button=(
        component "listbox/button"
        isOpen=this.isOpen
        buttonId=this.buttonId
        optionsId=this.optionsId
        toggle=this.toggle
        registerButton=this.registerButton
        unregisterButton=this.unregisterButton
      )
      Options=(
        component "listbox/options"
        isOpen=this.isOpen
        label=this.label
        labelId=this.labelId
        buttonId=this.buttonId
        optionsId=this.optionsId
        activeOption=this.activeOption
      )
      Option=(
        component "listbox/option"
        selectedOption=this.selectedOption
        activeOption=this.activeOption
        isMouseMoving=this.isMouseMoving
        selectOptionAndCommit=this.selectOptionAndCommit
        activateOption=this.activateOption
        setMouseMoving=this.setMouseMoving
        registerOption=this.registerOption
        unregisterOption=this.unregisterOption
      )
    )}}
  </Tag>
{{/let}}
