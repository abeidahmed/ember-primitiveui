{{! template-lint-disable no-down-event-binding }}

{{#let (element (or @as "button")) as |Tag|}}
  <Tag
    id={{@buttonId}}
    aria-haspopup="true"
    aria-expanded="{{@isOpen}}"
    aria-controls={{if @isOpen @listId}}
    {{on "click" @toggle}}
    {{on "keydown" this.handleKeydown}}
    {{this.registerButton}}
    ...attributes
    data-state={{if @isOpen "open" "closed"}}
  >
    {{yield}}
  </Tag>
{{/let}}
