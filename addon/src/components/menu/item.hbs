{{#let (if (tag-is-component @as) @as (element (or @as "button"))) as |Tag|}}
  <Tag
    tabindex="-1"
    role="menuitem"
    ...attributes
    id={{this.id}}
    {{on "click" this.onClick}}
    {{on "mouseover" this.onMouseover}}
    {{on "mousemove" this.onMousemove}}
    {{on "mouseleave" this.handleMouseleave}}
    {{this.registerItem}}
    disabled={{@disabled}}
    aria-disabled="{{@disabled}}"
    data-state={{if this.active "active"}}
  >
    {{yield (hash id=this.id active=this.active)}}
  </Tag>
{{/let}}
