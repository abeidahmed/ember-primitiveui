{{#let (element (or @as "div")) as |Tag|}}
  <Tag ...attributes>
    {{yield (hash
      List=(
        component "tab/list"
        isVertical=@isVertical
        items=this.items
        selectedItem=this.selectedItem
        selectItemAndCommit=this.selectItemAndCommit
      )
      Item=(
        component "tab/item"
        registerItem=this.registerItem
        unregisterItem=this.unregisterItem
        selectedItem=this.selectedItem
        selectItemAndCommit=this.selectItemAndCommit
      )
      Panel=(
        component "tab/panel"
        selectedItem=this.selectedItem
      )
    )}}
  </Tag>
{{/let}}
