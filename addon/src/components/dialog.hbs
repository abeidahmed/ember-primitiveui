{{#if @open}}
  <Portal>
    {{#let (element (or @as "div")) as |Tag|}}
      <Tag
        role="dialog"
        aria-modal="true"
        aria-labelledby={{if this.title this.titleId}}
        aria-describedby={{if this.description this.descriptionId}}
        tabindex="-1"
        ...attributes
      >
        {{yield
          (hash
            Title=(component
              "dialog/title"
              titleId=this.titleId
              registerTitle=this.registerTitle
              unregisterTitle=this.unregisterTitle
            )
            Description=(component
              "dialog/description"
              descriptionId=this.descriptionId
              registerDescription=this.registerDescription
              unregisterDescription=this.unregisterDescription
            )
            Panel=(component
              "dialog/panel"
              panelId=this.panelId
              onClose=@onClose
              registerPanel=this.registerPanel
              unregisterPanel=this.unregisterPanel
              rootBoundaries=this.rootBoundaries
            )
          )
        }}
      </Tag>
    {{/let}}
  </Portal>
{{/if}}
