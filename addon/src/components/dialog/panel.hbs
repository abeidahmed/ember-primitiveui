{{! template-lint-disable no-down-event-binding }}

{{#let (element (or @as "div")) as |Tag|}}
  <Tag
    id={{@panelId}}
    tabindex="-1"
    {{body-scroll-lock reserveScrollBarGap=true}}
    {{this.registerPanel}}
    {{on-outside-click @onClose boundaries=this.rootBoundaries}}
    {{on "keydown" this.handleKeydown}}
    {{focus-trap}}
    ...attributes
  >
    {{yield}}
  </Tag>
{{/let}}
