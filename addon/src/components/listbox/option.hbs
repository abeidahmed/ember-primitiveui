{{#let (element (or @as "li")) as |Tag|}}
  <Tag
    id={{@value.id}}
    tabindex="-1"
    role="option"
    aria-selected="{{this.selected}}"
    {{this.registerOption}}
    {{on "click" this.onClick}}
    {{on "mouseover" this.onMouseover}}
    {{on "mousemove" this.onMousemove}}
    ...attributes
  >
    {{yield (hash selected=this.selected active=this.active)}}
  </Tag>
{{/let}}
