<ExampleContainer>
  <div class="absolute top-16 max-w-xs w-full p-3">
    <Listbox @value={{this.selectedPerson}} @onChange={{this.setSelectedPerson}} class="relative" as |listbox|>
      <listbox.Button
        class="relative w-full cursor-default rounded bg-white py-2 pl-3 pr-10 text-left shadow-md focus:outline-none focus-visible:border-indigo-500 focus-visible:ring-2 focus-visible:ring-offset-indigo-500 sm:text-sm"
      >
        <span class="block truncate">{{this.selectedPerson.name}}</span>
        <span class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-2">
          {{svg-jar "drop-down" class="w-5 h-5 text-gray-400" fill="currentColor" aria-hidden="true"}}
        </span>
      </listbox.Button>

      <listbox.Options
        class="absolute mt-1 max-h-44 w-full overflow-y-auto rounded bg-white py-1 text-base shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none sm:text-sm"
      >
        {{#each this.people as |person|}}
          <listbox.Option @value={{person}} disabled={{person.disabled}} as |option|>
            <span
              class="block relative cursor-default select-none py-2 pl-10 pr-4
                {{if option.active 'bg-indigo-100 text-indigo-800' 'text-gray-900'}}"
            >
              <span class="block truncate">{{person.name}}</span>
              {{#if option.selected}}
                <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-indigo-600">
                  {{svg-jar "check" class="w-5 h-5" aria-hidden="true" fill="currentColor"}}
                </span>
              {{/if}}
            </span>
          </listbox.Option>
        {{/each}}
      </listbox.Options>
    </Listbox>
  </div>
</ExampleContainer>
