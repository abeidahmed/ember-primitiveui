<ExampleContainer>
  <div class="absolute top-16 right-10 sm:right-1/2 sm:translate-x-1/2">
    <Menu class="relative" as |menu|>
      <menu.Button
        class="inline-flex justify-center rounded border shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm"
        data-button
      >
        Options

        <span class="ml-1">
          <Svg @icon="drop-down" />
        </span>
      </menu.Button>

      <menu.List
        class="origin-top-right absolute right-0 mt-2 py-1 w-56 rounded overflow-hidden shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
        {{velcro "[data-button]" placement="bottom-end"}}
      >
        <menu.Item type="button" class="block w-full text-left" as |item|>
          <span class="block px-4 py-2 text-sm {{if item.active 'bg-indigo-600 text-white' 'text-gray-700'}}">
            Account settings
          </span>
        </menu.Item>

        <menu.Item type="button" class="block w-full text-left" as |item|>
          <span class="block px-4 py-2 text-sm {{if item.active 'bg-indigo-600 text-white' 'text-gray-700'}}">
            Support
          </span>
        </menu.Item>

        <menu.Item type="button" class="block w-full text-left" as |item|>
          <span class="block px-4 py-2 text-sm {{if item.active 'bg-indigo-600 text-white' 'text-gray-700'}}">
            License
          </span>
        </menu.Item>

        <div role="none" class="border-t my-2"></div>

        <menu.Item type="button" class="block w-full text-left" as |item|>
          <span class="block px-4 py-2 text-sm {{if item.active 'bg-indigo-600 text-white' 'text-gray-700'}}">
            Sign out
          </span>
        </menu.Item>
      </menu.List>
    </Menu>
  </div>
</ExampleContainer>
